<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.javabegin.hibernate.entity.Pets" table="pets" schema="pets">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="animal">
            <column name="animal" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>